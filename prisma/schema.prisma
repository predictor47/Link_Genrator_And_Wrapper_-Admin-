// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Project {
  id                String       @id @default(uuid())
  name              String
  description       String?
  createdAt         DateTime     @default(now()) @map("created_at")
  updatedAt         DateTime     @updatedAt @map("updated_at")
  surveyLinks       SurveyLink[]
  presurveyQuestions Question[]
  responses         Response[]
  flags             Flag[]
  vendors           Vendor[]     // Add relation to vendors

  @@map("projects")
}

model SurveyLink {
  id              String     @id @default(uuid())
  uid             String     @unique
  projectId       String     @map("project_id")
  project         Project    @relation(fields: [projectId], references: [id])
  vendorId        String?    @map("vendor_id") // Make vendorId optional
  vendor          Vendor?    @relation(fields: [vendorId], references: [id])
  originalUrl     String     @map("original_url")
  status          String     @default("PENDING") // PENDING, STARTED, IN_PROGRESS, COMPLETED, FLAGGED
  linkType        String     @default("LIVE") @map("link_type") // TEST or LIVE
  geoRestriction  String?    @map("geo_restriction") // JSON string of country codes
  createdAt       DateTime   @default(now()) @map("created_at")
  updatedAt       DateTime   @default(now()) @updatedAt @map("updated_at") // Add updatedAt field
  responses       Response[]
  flags           Flag[]

  @@map("survey_links")
}

model Vendor {
  id          String       @id @default(uuid())
  name        String
  code        String       // Unique vendor code
  projectId   String       @map("project_id")
  project     Project      @relation(fields: [projectId], references: [id])
  createdAt   DateTime     @default(now()) @map("created_at")
  surveyLinks SurveyLink[]

  @@unique([projectId, code]) // Ensure vendor code is unique within a project
  @@map("vendors")
}

model Question {
  id          String     @id @default(uuid())
  projectId   String     @map("project_id")
  project     Project    @relation(fields: [projectId], references: [id])
  text        String
  options     String     // Changed from String[] to String (will store as JSON string)
  createdAt   DateTime   @default(now()) @map("created_at")
  responses   Response[]

  @@map("questions")
}

model Response {
  id          String     @id @default(uuid())
  surveyLinkId String     @map("survey_link_id")
  surveyLink  SurveyLink @relation(fields: [surveyLinkId], references: [id])
  projectId   String     @map("project_id")
  project     Project    @relation(fields: [projectId], references: [id])
  questionId  String     @map("question_id")
  question    Question   @relation(fields: [questionId], references: [id])
  answer      String
  metadata    String     // Changed from Json to String (will store as JSON string)
  createdAt   DateTime   @default(now()) @map("created_at")

  @@map("responses")
}

model Flag {
  id          String     @id @default(uuid())
  surveyLinkId String     @map("survey_link_id")
  surveyLink  SurveyLink @relation(fields: [surveyLinkId], references: [id])
  projectId   String     @map("project_id")
  project     Project    @relation(fields: [projectId], references: [id])
  reason      String
  metadata    String     // Changed from Json to String (will store as JSON string)
  createdAt   DateTime   @default(now()) @map("created_at")

  @@map("flags")
}